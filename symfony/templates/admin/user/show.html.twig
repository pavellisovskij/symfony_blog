{% extends 'admin/admin.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <a href="{{ path('admin_user_index') }}" class="btn btn-primary mb-2">back to list</a>

    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Blocked</th>
                <td>
                    {% if user.blocked > "now"|date("Y-m-d H:i:s", 'Europe/Minsk') and user.blocked != null %}
                        <span class="badge badge-danger">blocked</span>
                    {% else %}
                        <span class="badge badge-success">active</span>
                    {% endif %}
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_user_edit', {'id': user.id}) }}" class="btn btn-warning mb-2">edit</a>

    {{ include('admin/user/_delete_form.html.twig') }}
{% endblock %}
