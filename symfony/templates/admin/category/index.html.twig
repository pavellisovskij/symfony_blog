{% extends 'admin/admin.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
    <h1>Category index</h1>

    <div class="btn-group pb-2">
        <a href="{{ path('admin_category_new') }}" class="btn btn-primary">Create new</a>
    </div>

    {{ include('admin/common/_search_form.html.twig') }}

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td>
                    <div class="btn-group btn-group-sm">
                        <a href="{{ path('admin_category_show', {'id': category.id}) }}" class="btn btn-primary">show</a>
                        <a href="{{ path('admin_category_edit', {'id': category.id}) }}" class="btn btn-warning">edit</a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
