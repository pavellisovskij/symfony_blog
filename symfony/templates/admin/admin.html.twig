<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}{% endblock %}</title>
        {% block head_css %}
            <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
        {% endblock %}
    </head>
    <body>
        <div class="container-fluid px-0 pb-2">
            <nav class="navbar navbar-dark bg-dark">
                <a class="navbar-brand" href="#">
                    <img src="{{ asset(config.getLogo.getPath) }}" width="30" height="30" class="d-inline-block align-top" alt="">
                    {{ config.getBrandName }}
                </a>
            </nav>
        </div>

        <div class="container-fluid">
            <div class="row">
                <div class="col-2 col-lg-1">
                    <nav class="nav flex-column nav-pills">
                        <a class="nav-link" href="{{ path('admin_category_index') }}">Categories</a>
                        <a class="nav-link" href="{{ path('admin_post_index') }}">Posts</a>
                    </nav>
                </div>

                <div class="col-10 col-lg-11">
                    {% block body %}{% endblock %}
                </div>
            </div>
        </div>

        {% block javascripts %}{% endblock %}
    </body>
</html>
