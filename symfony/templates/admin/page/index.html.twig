{% extends 'admin/admin.html.twig' %}

{% block title %}Page index{% endblock %}

{% block body %}
    <h1>Page index</h1>

    <div class="btn-group pb-2">
        <a href="{{ path('admin_page_new') }}" class="btn btn-primary">Create new</a>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Status</th>
                <th>Created</th>
                <th>Updated</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for page in pages %}
            <tr>
                <td>{{ page.id }}</td>
                <td>{{ page.title }}</td>
                <td>{{ page.status ? 'published' : 'draft' }}</td>
                <td>{{ page.createdAt|date('d.m.Y H:i:s') }}</td>
                <td>{{ page.updatedAt|date('d.m.Y H:i:s') }}</td>
                <td>
                    <div class="btn-group btn-group-sm">
                        <a href="{{ path('admin_page_show', {'id': page.id}) }}" class="btn btn-primary">show</a>
                        <a href="{{ path('admin_page_edit', {'id': page.id}) }}" class="btn btn-warning">edit</a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
